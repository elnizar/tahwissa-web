{% extends "TahwissaBundle:Membre:base.html.twig" %}

{% block title %}
     Profil De  {{ usere.nom }} {{ usere.prenom }}
{% endblock %}

{% block content %}

          <hr class="">
          <div class="container target">
          <div class="row">
               <div class="col-sm-2"><a href="" class="pull-right"><img title="profile image" class="img-circle img-responsive" src="{{ asset('images/profil/' ~ usere.chemin) }}" ></a>

               </div>
               <div class="col-sm-4">
                    <!–-  test - –>
                    <h1 class="">{{ usere.nom }}&nbsp;{{ usere.prenom }}</h1>
               </div>
               <div class="col-md-6 ">
                    <form action="{{ path('voir_profil') }}" method="post" class="search-form">
                         <div class="form-group has-feedback">
                              <label for="search" class="sr-only">Search</label>
                              <input type="text" class="form-control" name="rechrche" id="search" placeholder="search" >
                              <span class="glyphicon glyphicon-search form-control-feedback"></span>
                         </div>
                    </form>
               </div>

          </div>
          <br>
          <div class="row">
               <div class="col-sm-3">
                    <!--left col-->
                    <ul class="list-group">
                         <li class="list-group-item text-muted" contenteditable="false">Profile</li>
                         <li class="list-group-item text-right"><span class="pull-left"><strong class="">Email</strong></span> {{ usere.email }} </li>
                         <li class="list-group-item text-right"><span class="pull-left"><strong class="">Date Naissance</strong></span> {{ usere.dateNaissance |date('Y-m-d') }} </li>
                    </ul>
                    <div class="panel panel-default">
                         <div class="panel-heading">Nombre de partication </div>
                         <div class="panel-body"><i style="color:green" class="glyphicon glyphicon-road"></i> {{ nb }} Evenement

                         </div>
                    </div>
                    <div class="panel panel-default">
                         <div class="panel-heading">Social Media</div>
                         {{ twitterButton() }}<br>
                         {{ googleplusButton() }}<br>
                         {{ facebookButton() }}<br>
                    </div>
               </div>
               <!--/col-3-->
               <div class="col-sm-9" style="" contenteditable="false">
                    <div class="panel panel-default">
                         <div class="panel-heading">Interet</div>
                         <div class="panel-body"> {{ usere.informationPersonnel }}

                         </div>
                    </div>
                    <div class="panel panel-default target">
                         <div class="panel-heading" contenteditable="false">Mes Publication</div>
                         <div class="panel-body">
                              <div class="row">
                                   <div class="col-md-12">
                                        <div class="thumbnail">
                                             <img alt="300x200" src="{{ asset('images/profil/' ~ usere.chemin) }}">
                                             <div class="caption">
                                                  <h3>
                                                  </h3>
                                                  <p>
                                                  </p>
                                                  <p>

                                                  </p>
                                             </div>
                                        </div>
                                   </div>
                              </div>
                         </div>

                    </div>
               </div>
          </div>
{% endblock %}