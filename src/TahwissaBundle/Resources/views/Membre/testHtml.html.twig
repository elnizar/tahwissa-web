
{% extends "TahwissaBundle:Membre:base.html.twig" %}

{% block title %}
 Profil    &nbsp; &nbsp;
    <a href="{{ path('edit_pic') }}"><span class="glyphicon glyphicon-pencil"></span></a>
    <div class="dropdown" style="float: right; ">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Compte
            <span class="caret"></span></button>
        <ul class="dropdown-menu">
        {% if app.user.getCompte == null %}
        <li><a href="{{ path('compte') }}">S'inscrir</a></li>
        {% else %}
        <li><a href="{{ path('crediter') }}">Créditer Compte</a></li>
        <li><a href="{{ path('modifier') }}">Modifier compte</a></li>
        </ul>
    {% endif %}
    </div>

{% endblock %}
{% block content %}
    <hr class="">
    <div class="container target">
        <div class="row">
                <div class="col-sm-2"><a href="" class="pull-right"><img title="profile image" class="img-circle img-responsive" src="{{ asset('images/products/' ~ app.user.imageName) }}" ></a>

                </div>
            <div class="col-sm-4">
                <!–-  test - –>
                <h1 class="">{{ app.user.nom }}&nbsp;{{ app.user.prenom }}</h1>
            </div>
            <div class="col-md-6 ">
                <form action="{{ path('voir_profil') }}" method="post" class="search-form">
                    <div class="form-group has-feedback">
                        <label for="search" class="sr-only">Search</label>
                        <input type="text" class="form-control" name="rechrche" id="search" placeholder="search" >
                        <span class="glyphicon glyphicon-search form-control-feedback"></span>
                    </div>
                </form>
            </div>

        </div>
        <br>
        <div class="row">
            <div class="col-sm-3">
                <!--left col-->
                <ul class="list-group">
                    <li class="list-group-item text-muted" contenteditable="false">Profile</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Email</strong></span> {{ user.email }} </li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Date Naissance</strong></span> {{ app.user.dateNaissance |date('Y-m-d') }} </li>
                </ul>
                <div class="panel panel-default">
                    <div class="panel-heading">Nombre de partication </div>
                    <div class="panel-body"><i style="color:green" class="glyphicon glyphicon-road"></i> {{ nb }} Evenement

                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Social Media</div>
                    {{ twitterButton() }}<br>
                    {{ googleplusButton() }}<br>
                    {{ facebookButton() }}<br>
                </div>
            </div>
            <!--/col-3-->
            <div class="col-sm-9" style="" contenteditable="false">
                <div class="panel panel-default">
                    <div class="panel-heading">Interet</div>
                    <div class="panel-body"> {{ app.user.informationPersonnel }}

                    </div>
                </div>
                <div class="panel panel-default target">
                    <div class="panel-heading" contenteditable="false">Mes Publication</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="thumbnail">
                                 <img alt="300x200" src="{{ asset('images/products/' ~ app.user.imageName) }}">

                                    <img alt="" src="">
                                    <div class="caption">
                                        <h3>
                                        </h3>
                                        <p>
                                        </p>
                                        <p>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
        </div>
    </div>
{% endblock %}